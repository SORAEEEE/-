import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();
		int i = 1, j = 1;

		for (; i <= N; i++) {
			for (int k = N - j; k >= 0; k--) {
				System.out.print(" ");
			}
			for (; j <= i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}

		sc.close();
	}
}
