import java.util.Arrays;
import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();
		int[] arr = new int[N];
		double sum = 0.0;
		int min = 4000;
		int max = -4000;

		for (int i = 0; i < N; i++) {
			arr[i] = sc.nextInt();
			sum += arr[i];
			if(arr[i]>max) max = arr[i];
			if(arr[i]<min) min = arr[i];
		}
		
		Arrays.sort(arr);
		
		System.out.format("%.0f%n", (sum/N)); //»ê¼úÆò±Õ
		System.out.println(arr[(N-1)/2]);	  //Áß¾Ó°ª
		System.out.println((max-min));		  //¹üÀ§
		sc.close();
	}
}
